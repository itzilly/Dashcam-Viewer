<Window x:Class="Dashcam_Viewer.SelectDriveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dashcam_Viewer"
        mc:Ignorable="d"
        Title="Removable Drives" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Drive Display Rectangle -->
        <Rectangle Grid.Row="0" Stroke="Black" StrokeThickness="2" Margin="10">
            <!-- Customize the appearance of the rectangle and the content inside as per your requirements -->
        </Rectangle>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Cancel" Margin="5" Click="Cancel_Click" Width="75"/>
            <Button Content="Select" Margin="5" Click="Select_Click" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
